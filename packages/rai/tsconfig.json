{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ES2022", "dom"],
		"module": "nodenext",

		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"types": []
	},
	"include": ["*.ts"],
	"exclude": ["*.test.ts"]
}
